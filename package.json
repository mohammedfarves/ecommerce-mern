{
  "name": "halleyx-mern-ecommerce",
  "version": "1.0.0",
  "type": "module",
  "description": "HalleyX E-commerce MERN Stack Application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cross-env NODE_ENV=development nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "cross-env NODE_ENV=production node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "keywords": ["ecommerce", "mern", "mongodb", "react", "express", "nodejs"],
  "author": "Mohammed Farves",
  "license": "MIT"
}